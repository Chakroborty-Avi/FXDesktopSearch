                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                  <RowConstraints valignment="TOP" vgrow="ALWAYS" />
                  <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" valignment="TOP" vgrow="ALWAYS" />
              </rowConstraints>
               <children>
            <Label minWidth="-Infinity" text="Show similar search results" />
            <CheckBox fx:id="showSimilarResults" mnemonicParsing="false" GridPane.columnIndex="1" />
            <Label text="Number of search results" GridPane.rowIndex="1" />
            <Slider fx:id="numberDocuments" max="200.0" min="1.0" showTickLabels="true" value="100.0" GridPane.columnIndex="1" GridPane.columnSpan="2147483647" GridPane.rowIndex="1" />
            <Label text="Indexed directories:" GridPane.rowIndex="2" />
            <HBox GridPane.columnSpan="4" GridPane.rowIndex="3" GridPane.vgrow="ALWAYS">
              <children>
                <ListView fx:id="indexedDirectories" prefHeight="100.0" HBox.hgrow="ALWAYS">
                  <HBox.margin>
                    <Insets right="5.0" />
                  </HBox.margin>
                </ListView>
                <VBox HBox.hgrow="NEVER">
                  <children>
                    <Button fx:id="buttonAdd" maxHeight="25.0" maxWidth="25.0" minHeight="25.0" minWidth="25.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="25.0" styleClass="buttonAdd" text="+" />
                    <Button fx:id="buttonRemove" maxHeight="25.0" maxWidth="25.0" minHeight="25.0" minWidth="25.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="25.0" styleClass="buttonRemove" text="-">
                      <VBox.margin>
                        <Insets top="5.0" />
                      </VBox.margin>
                    </Button>
                  </children>
                </VBox>
              </children>
            </HBox>
                  <Label text="Scanned documents" GridPane.rowIndex="4" />
